<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
  <link rel="stylesheet" type="text/css" href="/main.css">
  <title>Add New Wine | BitePair</title>
</head>
<body class="add-wine-page">
  <h1><i class="fas fa-wine-bottle"></i> Add a New Wine</h1>
  
  <form action="/menu/wine/add" method="POST">
    <div class="form-group">
      <label for="name">Wine Name:</label>
      <input type="text" id="name" name="name" placeholder="e.g., Chardonnay" required>
    </div>

    <div class="form-group">
      <label for="origin">Origin:</label>
      <input type="text" id="origin" name="origin" placeholder="e.g., Burgundy, France" required>
    </div>

    <div class="form-group">
      <label for="category">Category:</label>
      <select id="category" name="category" required>
        <option value="">Select a category</option>
        <option value="White Champagne">White Champagne</option>
        <option value="Rose Champagne">Rosé Champagne</option>
        <option value="White Wine">White Wine</option>
        <option value="Rose Wine">Rosé Wine</option>
        <option value="Red Wine">Red Wine</option>
        <option value="Sparkling Wine">Sparkling Wine</option>
      </select>
    </div>

    <h3><i class="fas fa-tags"></i> Pricing Options</h3>
    <div class="price-options">
      <div class="price-group">
        <label for="glass_price">Glass Price (£):</label>
        <input type="number" step="0.01" min="0" id="glass_price" name="glass_price" placeholder="0.00">
      </div>

      <div class="price-group">
        <label for="small_price">Small Price (£):</label>
        <input type="number" step="0.01" min="0" id="small_price" name="small_price" placeholder="0.00">
      </div>

      <div class="price-group">
        <label for="medium_price">Medium Price (£):</label>
        <input type="number" step="0.01" min="0" id="medium_price" name="medium_price" placeholder="0.00">
      </div>

      <div class="price-group">
        <label for="large_price">Large Price(£):</label>
        <input type="number" step="0.01" min="0" id="large_price" name="large_price" placeholder="0.00">
      </div>

      <div class="price-group">
        <label for="bottle_price">Bottle Price (£):</label>
        <input type="number" step="0.01" min="0" id="bottle_price" name="bottle_price" placeholder="0.00">
      </div>
    </div>

    <button type="submit">
      <i class="fas fa-plus-circle"></i> Add Wine
    </button>
  </form>

  <script>
    // Validate at least one price is entered
    document.querySelector('form').addEventListener('submit', function(e) {
      const priceInputs = document.querySelectorAll('input[type="number"]');
      let hasPrice = false;
      
      priceInputs.forEach(input => {
        if (input.value && parseFloat(input.value) > 0) {
          hasPrice = true;
        }
      });
      
      if (!hasPrice) {
        e.preventDefault();
        alert('Please enter at least one price option');
      }
    });
  </script>
</body>
</html>