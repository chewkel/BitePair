<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Your Basket</title>
  <style>
    body { font-family: Arial, sans-serif; text-align: center; }
    table { width: 80%; margin: auto; border-collapse: collapse; }
    th, td { border: 1px solid #ddd; padding: 8px; }
    .button { background: green; color: white; border: none; padding: 5px 10px; cursor: pointer; }
    .remove { background: red; }
  </style>
</head>
<body>
  <h1>Your Basket</h1>

  <% if (basket.length > 0) { %>
    <table>
      <tr>
        <th>Item</th>
        <th>Quantity</th>
        <th>Price</th>
        <th>Total</th>
        <th>Actions</th>
      </tr>
      <% basket.forEach(item => { %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.quantity %></td>
        <td>£<%= (item.quantity * item.price).toFixed(2) %></td>
        <td>
          <button class="button plus" data-id="<%= item.id %>">+</button>
          <button class="button minus" data-id="<%= item.id %>">-</button>
          <button class="button remove" data-id="<%= item.id %>">Remove</button>
        </td>
      </tr>
      <% }) %>
    </table>
    <h2>Total: £<%= total.toFixed(2) %></h2>
  <% } else { %>
    <p>Your basket is empty. <a href="/">Go back</a>.</p>
  <% } %>

  <script>
    document.addEventListener("click", async (e) => {
      if (e.target.classList.contains("plus") || e.target.classList.contains("minus") || e.target.classList.contains("remove")) {
        const change = e.target.classList.contains("plus") ? 1 : e.target.classList.contains("minus") ? -1 : 0;
        const id = e.target.dataset.id;

        await fetch(`/basket/${change ? "update" : "remove"}`, {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ id, change }),
        });

        location.reload();
      }
    });
  </script>
</body>
</html>