<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Delete Menu Item</title>
</head>
<body>
  <h1>Delete Menu Item</h1>

  <h2>Food</h2>
  <ul>
    <% food.forEach(item => { %>
    <li>
      <strong><%= item.name %></strong> - $<%= item.price %> <br>
      Allergens: <%= item.allergens && item.allergens.length > 0 ? item.allergens.join(', ') : 'None' %>
      <form action="delete" method="POST" onsubmit="return confirm('Are you sure you want to delete this item?');">
        <input type="hidden" name="category" value="food">
        <input type="hidden" name="id" value="<%= item.id %>">
        <button type="submit">Delete</button>
      </form>
    </li>
    <% }) %>
  </ul>

  <h2>Drinks</h2>
  <ul>
    <% drinks.forEach(item => { %>
    <li>
      <strong><%= item.name %></strong> - $<%= item.price %> <br>
      Allergens: <%= item.allergens && item.allergens.length > 0 ? item.allergens.join(', ') : 'None' %>
      <form action="delete" method="POST" onsubmit="return confirm('Are you sure you want to delete this item?');">
        <input type="hidden" name="category" value="drinks">
        <input type="hidden" name="id" value="<%= item.id %>">
        <button type="submit">Delete</button>
      </form>
    </li>
    <% }) %>
  </ul>
</body>
</html>