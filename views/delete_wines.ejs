<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Wine Menu</title>
  <style>
    /* Your existing styles */
    .wine-item {
      margin-bottom: 20px;
      padding: 10px;
      border: 1px solid #ddd;
      border-radius: 5px;
    }

    .wine-item h3 {
      margin: 0;
      font-size: 20px;
    }

    .wine-item p {
      margin: 5px 0;
    }

    .price {
      font-weight: bold;
    }
  </style>
</head>
<body>
  <h1>Wine Menu</h1>

  <div class="wine-list">
    <% wine.forEach(wine => { %>
        <form action="delete" method="POST" onsubmit="return confirm('Are you sure you want to delete this item?');">
            <input type="hidden" name="id" value="<%= wine.id %>">
            <input type="hidden" name="category" value="wine">
            <div class="wine-item">
                <h3><%= wine.name %></h3>
                <p><strong>Origin:</strong> <%= wine.origin %></p>
                <p><strong>Category:</strong> <%= wine.category %></p>
        
                <% if (wine.glass_price) { %>
                    <p class="price">Glass: £<%= wine.glass_price %></p>
                <% } %>
        
                <% if (wine.small_price) { %>
                    <p class="price">Small: £<%= wine.small_price %></p>
                <% } %>
        
                <% if (wine.medium_price) { %>
                    <p class="price">Medium: £<%= wine.medium_price %></p>
                <% } %>
        
                <% if (wine.large_price) { %>
                    <p class="price">Large: £<%= wine.large_price %></p>
                <% } %>
        
                <% if (wine.bottle_price) { %>
                    <p class="price">Bottle: £<%= wine.bottle_price %></p>
                <% } %>
        
                <button>Delete</button>
            </div>
        </form>
    <% }) %>
  </div>

</body>
</html>