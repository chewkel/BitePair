<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
  <link rel="stylesheet" type="text/css" href="/main.css">
  <title>Wine Menu | BitePair</title>
  <style>
    /* Paste the CSS above here */
  </style>
</head>
<body>
  <h1><i class="fas fa-wine-bottle"></i> Wine Menu</h1>

  <div class="wine-list">
    <% wine.forEach(wine => { %>
      <form action="/menu/wine/delete" method="POST" onsubmit="return confirm('Are you sure you want to delete <%= wine.name %>?');">
        <input type="hidden" name="id" value="<%= wine.id %>">
        <input type="hidden" name="category" value="wine">
        
        <div class="wine-item">
          <h3><%= wine.name %></h3>
          <p><strong>Origin:</strong> <%= wine.origin %></p>
          <p><strong>Category:</strong> <%= wine.category %></p>
          
          <div class="price-options">
            <% if (wine.glass_price) { %>
              <p class="price">Glass: £<%= Number(wine.glass_price).toFixed(2) %></p>
            <% } %>
            
            <% if (wine.small_price) { %>
              <p class="price">Small Carafe: £<%= Number(wine.small_price).toFixed(2) %></p>
            <% } %>
            
            <% if (wine.medium_price) { %>
              <p class="price">Medium Carafe: £<%= Number(wine.medium_price).toFixed(2) %></p>
            <% } %>
            
            <% if (wine.large_price) { %>
              <p class="price">Large Carafe: £<%= Number(wine.large_price).toFixed(2) %></p>
            <% } %>
            
            <% if (wine.bottle_price) { %>
              <p class="price">Bottle: £<%= Number(wine.bottle_price).toFixed(2) %></p>
            <% } %>
          </div>
          
          <button type="submit">
            <i class="fas fa-trash-alt"></i> Delete
          </button>
        </div>
      </form>
    <% }) %>
  </div>

  <% if (wine.length === 0) { %>
    <div style="text-align: center; padding: 40px; background: white; border-radius: 8px;">
      <i class="fas fa-wine-bottle" style="font-size: 2rem; color: #6c757d;"></i>
      <p style="color: #6c757d; margin-top: 15px;">No wines currently available</p>
    </div>
  <% } %>
</body>
</html>