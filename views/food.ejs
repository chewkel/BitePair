<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
  <link rel="stylesheet" type="text/css" href="/main.css">
  <title>Food Menu</title>
</head>
<body>
  <header class="menu-header">
    <h1>Food Menu</h1>
    <!-- <p>Carefully crafted dishes made with the finest ingredients</p> -->
  </header>

  <% Object.keys(groupedFood).forEach(category => { %>
    <section class="category-section">
      <div class="category-title">
        <h2><%= category %></h2>
      </div>
      
      <div class="food-grid">
        <% groupedFood[category].forEach(item => { %>
          <article class="food-card">
            <div class="food-card__content">
              <h3><%= item.name %></h3>
              <p class="ingredients"><strong>Ingredients:</strong> <%= item.ingredients %></p>
              
              <div class="price">Â£<%= item.price %></div>

              <div class="allergens">
                <span class="allergens-label">Allergens:</span>
                <% if (item.allergens && item.allergens.length > 0) { %>
                  <% item.allergens.forEach(allergen => { %>
                    <% if (allergen) { %> 
                      <span class="allergen-tag" data-allergen="<%= allergen %>">
                        <i class="<%= getAllergenIcon(allergen) %>"></i>
                      </span>
                    <% } %>
                  <% }) %>
                <% } else { %>
                  <span class="no-allergens">None</span>
                <% } %>
              </div>
            </div>
          </article>
        <% }) %>
      </div>
    </section>
  <% }) %>

  <!-- Allergen Popup -->
  <div id="allergen-popup" class="popup-overlay">
    <div class="popup-content">
      <span class="close-btn">&times;</span>
      <h2 id="allergen-title"></h2>
      <p id="allergen-description"></p>
    </div>
  </div>

  <script>
    const allergenDescriptions = {
      "Dairy": "Contains dairy products such as milk, cheese, and butter. Example: Cheese pizza.",
      "Eggs": "May contain eggs or egg-based products. Example: Scrambled eggs, mayonnaise.",
      "Peanuts": "Contains peanuts or peanut-based ingredients. Example: Peanut butter.",
      "Tree Nuts": "Includes almonds, walnuts, cashews, etc. Example: Almond cake.",
      "Soy": "Contains soy-based ingredients. Example: Soy sauce, tofu.",
      "Wheat": "May contain wheat or gluten. Example: Bread, pasta.",
      "Fish": "Includes fish-based ingredients. Example: Salmon, tuna.",
      "Shellfish": "May contain shrimp, crab, lobster, etc. Example: Shrimp cocktail.",
      "Sesame": "Contains sesame seeds or sesame oil. Example: Hummus, sesame bagels.",
      "Nuts": "May contain nuts or nut-based ingredients. Example: Nutella, almond cake.",
      "Gluten": "Contains gluten-based ingredients. Example: Bread, pasta.",
    };

    // Allergen popup functionality
    document.querySelectorAll('.allergen-tag').forEach(tag => {
      tag.addEventListener('click', function() {
        const allergenName = this.dataset.allergen;
        const popup = document.getElementById('allergen-popup');
        
        document.getElementById('allergen-title').textContent = allergenName;
        document.getElementById('allergen-description').textContent = 
          allergenDescriptions[allergenName] || "No detailed description available.";
        
        popup.classList.add('active');
      });
    });

    document.querySelector('.close-btn').addEventListener('click', function() {
      document.getElementById('allergen-popup').classList.remove('active');
    });

    window.addEventListener('click', function(event) {
      if (event.target === document.getElementById('allergen-popup')) {
        document.getElementById('allergen-popup').classList.remove('active');
      }
    });

    // Add animation when page loads
    document.addEventListener('DOMContentLoaded', function() {
      const cards = document.querySelectorAll('.food-card');
      cards.forEach((card, index) => {
        setTimeout(() => {
          card.style.opacity = '1';
          card.style.transform = 'translateY(0)';
        }, 100 * index);
      });
    });
  </script>
</body>
</html>